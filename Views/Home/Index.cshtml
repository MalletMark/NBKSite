@{
  Layout = "_Layout";
}

  <!-- ==== HEADERWRAP ==== -->
  <div id="home"></div>
  <div id="headerwrap" name="home">
    <header class="clearfix">
      <h1>
        <span class="icon icon-shield"></span>
      </h1>
      <p>Natural Born Killers</p>
      <p>A MapleStory 2 Guild</p>
      <a role="button" class="btn btn-apply btn-lg" href="https://docs.google.com/forms/d/e/1FAIpQLSfUJKGNVh8FjSijaYCqllHz9G9pB6A_93WnWyOOtcZOmk6utQ/viewform">APPLY NOW</a>
    </header>
  </div>
